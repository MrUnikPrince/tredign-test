<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Trading View</title>
  <style>
    *{
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      background-color: rgb(12, 12, 12);
      color: white;

    }
    .main{
      width: 100%;
      background-color: rgb(21, 19, 19);
    }
    .main nav{
      /* -webkit-column-count: 3; */
      column-count: 3;
      margin: 3%;
      width: 90%;
    }
    .logo img {
      width: 70%;
      height: auto;
    }
    .coins{
      
    }
    .social-links a {
      margin: 0 5px;
    }
    .telegram-btn{
      text-decoration: none;
      background-color: rgb(17, 218, 151);
      padding: 5px;
      border-radius: 8px;
    }
    .primary-btn{
      outline: none;
      border: none;
      background-color: rgba(44, 37, 37, 0.784);
      font-size: medium;
      padding: 5px;
      border-radius: 5px;
      cursor: pointer;
    }
    #crypto-dropdown  option{
      background-color: white;
      color: black;
    }
  </style>
</head>

<body>

  <div class="main">
    <nav>
      <div class="logo">
        <img src="https://hodlinfo.com/static/media/HODLINFO.8f78fc06.png" alt="">
      </div>

      <div class="coins">
        <!-- Dropdown menu for selecting cryptocurrencies -->
        <select id="crypto-dropdown" class="primary-btn">
          <% cryptocurrencies.forEach(function(crypto) { %>
            <option value="<%= crypto.name %>">
              <%= crypto.name %>
            </option>
            <% }); %>
        </select>
        <button class="primary-btn"> Buy Now</button>
      </div>

      <div class="social-links">
        <a href="#">O</a>
        <a href="#" class="telegram-btn">Connect Telegram</a>
        <a href="#">O</a>

      </div>
    </nav>
  </div>
  <h1>Cryptocurrency Details</h1>


  <!-- Dropdown menu for selecting cryptocurrencies -->
  <select id="crypto-dropdown">
    <% cryptocurrencies.forEach(function(crypto) { %>
      <option value="<%= crypto.name %>">
        <%= crypto.name %>
      </option>
      <% }); %>
  </select>
  <section class="coin-price">
    <p>Best Price to Trade</p>
    <div class="best-trade-price">
      <!-- Best trade price will be displayed here -->
    </div>
  </section>

  <section>
    <table>
      <thead>
        <td>#</td>
        <td>Platform</td>
        <td>Last traded Price</td>
        <td>buy and sell price</td>
        <td>Difference </td>
        <td>saving </td>
      </thead>
      <tbody id="crypto-table-body">
        <!-- Cryptocurrency data rows will be added here dynamically -->
      </tbody>
    </table>
  </section>


  <!-- Container for displaying cryptocurrency details -->
  <div id="crypto-details-container">
    <!-- Content will be updated based on user selection -->
  </div>
  <script>
    const cryptocurrenciesData = JSON.parse('<%- JSON.stringify(cryptocurrencies) %>');
  </script>
  <!-- Include JavaScript code for handling user interaction -->
  <script src="/js/crypto.js"></script>

</body>

</html>


